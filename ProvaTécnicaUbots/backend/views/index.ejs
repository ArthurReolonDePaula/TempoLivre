  <body>
  	<div class="container">
		<img src="imagem/LogoUbots.png" class="img-responsive" alt="LogoResponsiva">
		
			<nav class="navbar navbar-expand-md bg-dark navbar-dark">
				<a class="navbar-brand" href="#">Menu</a>
				
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
				  <span class="navbar-toggler-icon"></span>
				</button>

					<div class="collapse navbar-collapse" id="collapsibleNavbar">
				  	<ul class="navbar-nav">
							<li class="nav-item">
					  		<a class="nav-link" href="adicionaFilme.html">Adicionar Filmes</a>
							</li>

							<li class="nav-item">
					 			<a class="nav-link" href="#">Atualizar Filmes</a>
							</li>

							<li class="nav-item">
					  		<a class="nav-link" href="#">Deletar Filmes</a>
							</li>
				  	</ul>
					</div>
			</nav>

			  	<div id="conteudo">
						<fieldset id="formCadastro">
							<h1><Strong>Adicionar</Strong></h1>
								<form action="/cadastrar-filme" method="POST" onsubmit="return cadastrarFilme()">
									<label>
										<strong>Nome Do Filme</strong>
									</label>
										<input type="text" name="nomeDoFilme" class="form-control" id="nomeFilme">
	
									<label>
										<strong>Duração</strong>
									</label>
										<input type="text" name="duracaoDoFilme" class="form-control" id="duracao">
	
									<label>
										<strong>Ano de Lançamento</strong>
									</label>
										<input type="text" name="anoLancamento" class="form-control" id="ano">
	
									<label>
										<strong>Sinopse</strong>
									</label>
										<input type="text" name="sinopseDoFilme" class="form-control" id="sinopse">
						
									<label>
										<strong>Classificação indicativa</strong>
									</label>
										<select class="form-control" name="classificacaoDoFilme" id="classificacao">
											<option value="L(Livre)">L(Livre)</option>
											<option value="+10">+10</option>
											<option value="+12">+12</option>
											<option value="+14">+14</option>
											<option value="+16">+16</option>
											<option value="+18">+18</option>
										</select>
						
									<label>
										<strong>Avaliação do Filme</strong>
									</label>
										<select class="form-control" name="avaliacaoDoFilme" id="avaliacao">
											<option value="Péssimo">Péssimo</option>
											<option value="Ruim">Ruim</option>
											<option value="Regular">Regular</option>
											<option value="Bom">Bom</option>
											<option value="Ótimo">Ótimo</option>
										</select>
	
										<input type="submit" id="botaoAdiciona" class="btn btn-warning btn-filter" value="Adicionar Filme"/>
								</form>
						</fieldset>
				<div>
				  <table class="table table-hover" id="listaDeFilmes">
						<tbody>
					  	<tr>
								<td><strong>Nome do Filme</strong></td>
								<td><strong>Duração</strong></td>
								<td><strong>Ano</strong></td>
								<td><strong>Sinopse</strong></td>
								<td><strong>Classificação</strong></td>
								<td><strong>Avaliação</strong></td>
							</tr>
								<% for(i=0; i<filmes.length; i++) { %>
							<tr>
								<td><%= filmes[i].nomeDoFilme %></td>
								<td><%= filmes[i].duracaoDoFilme %></td>
								<td><%= filmes[i].anoLancamento %></td>
								<td><%= filmes[i].sinopseDoFilme %></td>
								<td><%= filmes[i].classificacaoDoFilme %></td>
								<td><%= filmes[i].avaliacaoDoFilme %></td>
							</tr>
								<% } %>
						</tbody>
				  </table>
				</div>
			</div>
		</div>
  </body>
